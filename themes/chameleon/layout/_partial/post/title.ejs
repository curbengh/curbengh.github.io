<% if (post.link) { %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title) { %>
  <% if (index) { %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="headline name"><%= post.title %>
      <%/* Share button */%>
      <a id="btnshare">
        <img src="/svg/share.svg">
      </a>
    </h1>
  <% } %>
<% } %>
